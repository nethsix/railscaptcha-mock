<section class="login-container" role="main">
 <div class="login-form">
     <h1>Sign up</h1>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
         <div class="form-group">
             <%= f.text_field :name, :autofocus => true, placeholder: 'name', class: 'form-control' %>
         </div>
         <div class="form-group">
             <%= f.email_field :email, placeholder: 'email', class: 'form-control' %>
         </div>
         <div class="form-group has-feedback">
             <%= f.password_field :password, placeholder: 'password', class: 'form-control' %>
         </div>
         <div class="form-group has-feedback">
             <%= f.password_field :password_confirmation, placeholder: 'confirm password', class: 'form-control' %>
         </div>
         <div class="form-group">
             <%= f.submit 'Sign up', :class => 'btn btn-default btn-block' %>
         </div>

     <% end %>
 </div>
 <div class="login-footer" style="text-align:center;">
     <a href="https://github.com/login/oauth/authorize?client_id=73e9336783a759b47c38&scope=user:email&redirect_uri=https%3A%2F%2Fmy.ringcaptcha.com%2Flogin%2Fgithub" class="btn btn-github">Login with GitHub</a>
     <p style="margin: 9px 20px 0 20px;">Heavy contributors will get access to our unlimited version.</p>
 </div>
</section>
